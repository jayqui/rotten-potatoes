<div class="actor_index">

  <p id="notice"><%= notice %></p>

  <h1>Listing Actors</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3">Average User Rating</th>
      </tr>
    </thead>

    <tbody>
      <% @actors.each do |actor| %>
        <tr>
          <td><%= actor.name %></td>
          <td><%= render partial: "stars/stars_average", locals: {commentable: actor} %></td>
          <td><%= link_to 'Show', actor %></td>
          <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
          <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Actor', new_actor_path %><br>
  <%= link_to 'Back', new_actor_path %>

</div>
